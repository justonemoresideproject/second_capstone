{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.product.com/productNew.schema.json",
    "type": "object",
    "properties": {
        "customerId": {
            "type": "integer",
            "minimum": 0
        },
        "addressId": {
            "type": "integer",
            "minimum": 0
        },
        "price": {
            "type": "string",
            "pattern": "0|(0?\\.[0-9]+)"
        },
        "currency": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3
        }
    },
    "additionalProperties": false
}  