{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.product.com/productUpdate.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "description": {
            "type": "string"
        },
        "price": {
            "type": "number",
            "exclusiveMinimum": 0
        },
        "published": {
            "type": "boolean"
        },
        "imageSrc": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
        }
    },
    "additionalProperties": false
}
  